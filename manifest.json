{
	"manifest_version": 2,
	"name": "hello-world-browser-extension",
	"version": "0.1",
	"description": "Test of a webextension",
	"homepage_url": "https://github.com/Offirmo/hello-world-browser-extension",
	"icons": {
		"48": "icons/icon_48x48.png",
		"96": "icons/icon_96x96.png"
	},
	"permissions": [
		"*://*",
		"alarms",
		"bookmarks",
		"contextMenus",
		"cookies",
		"downloads",
		"downloads.open",
		"history",
		"idle",
		"management",
		"nativeMessaging",
		"notifications",
		"storage",
		"tabs",
		"webNavigation",
		"webRequest",
		"webRequestBlocking",
		"clipboardWrite: write",
		"clipboardWrite: read",
		"background",
		"clipboardRead",
		"clipboardWrite",
		"geolocation",
		"unlimitedStorage"
	],
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"run_at": "document_start",
			"js": ["content-start.js"]
		},
		{
			"matches": ["<all_urls>"],
			"run_at": "document_end",
			"js": ["content-end.js"]
		},
		{
			"matches": ["<all_urls>"],
			"run_at": "document_idle",
			"js": ["content-idle.js"]
		}
	],
	"browser_action": {
		"default_icon": "icons/icon_48x48.png",
		"default_title": "hello-world-browser-extension browser_action icon !",
		"default_popup": "popup.html"
	},
	"options_ui": {
		"page": "options.html"
	}
}
